@model IEnumerable<grouptest.Models.ViewModels.LoanModelView>

@{
    ViewData["Title"] = "FunctionTwelve";
}

<h1>Function Twelve</h1>

<h4>List of all the members who have not borrowed DVD in last 31 days</h4>

<table class="table table-bordered table-striped mt-4">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CopyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberLastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberFirstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DvdTitleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfDays)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CopyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberLastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberFirstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DvdTitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDays)
            </td>
        </tr>
}
    </tbody>
</table>
