<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Group test</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/grouptest.styles.css" asp-append-version="true" />
    @RenderSection("Stylesheets", required: false)
    <style>
        .navbar{
            padding: 20px
        }
        .logo{
            width:50px;
            height:50px;
            border-radius:50%;
        }
        .navbar-brand{
            font-size:35px;
            font-weight:bolder;
            font-style:italic;
            font-family: poppin;
            margin: 0px 20px;
        }
        .nav-link{
            font-family:poppin;
            font-weight: bolder;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <li class="container-fluid">
                <div>
                    <img class="logo" src="images/logoo.jpg">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ropey DVDs</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>


                <li class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                         <li class="nav-item dropdown">
                              <a class="nav-link dropdown-toggle text-light  p-4" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Team
                              </a>
                              <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Actor" asp-action="Index">Actors</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Studio" asp-action="Index">Studio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Producer" asp-action="Index">Producer</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Cast" asp-action="Index">Cast Member</a>
                                </li>
                              </ul>
                         </li>
                         <li class="nav-item dropdown">
                              <a class="nav-link dropdown-toggle text-light p-4 " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Members
                              </a>
                              <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Membership" asp-action="Index">Membership Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                                </li>
                              </ul>
                         </li>
                         <li class="nav-item dropdown">
                              <a class="nav-link dropdown-toggle text-light p-4" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                DVD
                              </a>
                              <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="DvdCategory" asp-action="Index">DvdCategory</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="DvdTitle" asp-action="Index">DvdTitles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="DvdCopy" asp-action="Index"> DvdCopy</a>
                                </li>

                              </ul>
                         </li>
                         <li class="nav-item dropdown">
                              <a class="nav-link dropdown-toggle text-light p-4 " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Loan
                              </a>
                              <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="LoanType" asp-action="Index">LoanTypes</a>
                                </li>
                        
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Loan" asp-action="Index"> Loan</a>
                                </li>

                              </ul>
                         </li>
                         <li class="nav-item dropdown">
                              <a class="nav-link dropdown-toggle text-light p-4 " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Functionalities
                              </a>
                              <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionOne"> Function One</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionTwo"> Function Two</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionThree"> Function Three</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionFourView"> Function Four</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionFive"> Function Five</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionEight"> Function Eight</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionTen"> Function Ten</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionEleven"> Function Eleven</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionTwelve"> Function Twelve</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="FunctionThirteen"> Function Thirteen</a>
                                </li>

                              </ul>
                         </li>
                         <li class="nav-item dropdown">
                              <a class="nav-link dropdown-toggle text-light p-4  " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Register
                              </a>
                              <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Authentication" asp-action="RegisterAdmin">Register Admin</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Authentication" asp-action="Register">Register User</a>
                                </li>
                              </ul>
                         </li>
                        <li class="nav-item">
                                <a class="nav-link text-light p-4" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                        </li>
                
                    </ul>
                </li>
             </li>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CourseWorkSampleAuth - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
