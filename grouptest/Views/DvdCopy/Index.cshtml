@model IEnumerable<grouptest.Models.DvdCopy>

@{
    ViewData["Title"] = "Index";
}

@section Stylesheets {
    <style type="text/css"> 
        h1{
            font-weight:bolder;
            font-family: poppin;
        }
    </style>
    
}

<h1 class="display-1">DvdCopy Index</h1>

<p>
    <a asp-action="Create"><button class="btn bg-secondary text-light">Create New</button></a>
</p>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CopyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DvdTitleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePurchased)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CopyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DvdTitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePurchased)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.CopyNumber"><button class="btn1 bg-success text-light"><i class="bi bi-pencil-square"></i> Edit</button></a>
                <a asp-action="Delete" asp-route-id="@item.CopyNumber"><button class="btn2 bg-danger text-light"><i class="bi bi-archive-fill"></i> Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
